<?php

  Print"Hรก quanto tempo tu Fumas?";
   
   $anos_fumados        = (int) fgets(STDIN);

   Print " Quanto Cigarros Fumas Por dia? ";

   $cigarros_fumados    = (int) fgets(STDIN);
   
