<?php
print "Digite uma quantida de dias";
$Dias = (int) fgets(STDIN);
Print"Digite Uma Quantidade de horas";
$Horas = (int) fgets(STDIN);
Print" Digite uma quantidade de Minutos";
$Minutos = (int) fgets(STDIN);
Print " Digite uma quantidade de Segundos";
$Segundos = (int) fgets (STDIN);
$DiasSegundos = $Dias*86400;
$HorasSegundos = $Horas*3600;
$MinutosSegundos = $Minutos*60;
$SegundosFinais = $DiasSegundos + $HorasSegundos + $MinutosSegundos + $Segundos;
Print "Você tem $SegundosFinais";
